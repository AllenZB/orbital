<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userImageDisplay"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:layout_alignBottom="@+id/userEmailDisplay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        app:srcCompat="@mipmap/ic_user_sample" />

    <TextView
        android:id="@+id/userNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="33dp"
        android:text="Display Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userEmailDisplay"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userNameDisplay"
        android:layout_marginTop="60dp"
        android:text="DisplayEmail"
        android:textStyle="bold" />
</RelativeLayout>